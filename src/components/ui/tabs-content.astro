---
import { cn } from "@/lib/utils";

interface Props {
  class?: string;
  value: string;
}

const { class: className, value } = Astro.props;
---

<div
  class={cn(
    "mt-2 ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2",
    className
  )}
  role="tabpanel"
  data-tabs-content
  data-value={value}
>
  <slot />
</div>
